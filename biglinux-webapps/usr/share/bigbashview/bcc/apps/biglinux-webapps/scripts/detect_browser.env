#!/usr/bin/env bash

browser_bin_list=( "brave" "firefoxpwa" "vivaldi-stable" "vivaldi-snapshot"  "chromium" "google-chrome-stable" "google-chrome-beta" "google-chrome-unstable" "microsoft-edge-beta" "microsoft-edge-dev" "microsoft-edge-stable" "yandex-browser-stable" "yandex-browser-beta" "thorium-browser" "flashpeak-slimjet" "epiphany" "electron" )

for i in {20..5}; do
    browser_bin_list+=("electron$i")
done
# waiting for opera devs to add support for webapps

browser_bin_list+=("bbv-client")

detect_browser() {
    for browser in "${browser_bin_list[@]}"; do
        if [ -x /usr/bin/"$browser" ]; then
            echo "$browser"
            echo "$browser" > $HOME/.bigwebapps/BROWSER
            break
        fi
    done
}
